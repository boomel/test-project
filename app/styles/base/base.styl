body
	color #000
	font-family PT Sans, sans-serif
	background-color #797979
	cursor default

	+to-width(540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	width 1000px
	position relative
	font-size 16px
	background #e5c592 url("../images/bg.jpg")

  


	&::selection
		background-color #ffffd0

	+to-width(540px)
		padding-top 40px
		padding-bottom 40px
		border-radius 0
		box-shadow none

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

	+to-width(540px)
		text-align center

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background-color #e8e8e8

	&::selection
		background-color rgba(0, 0, 0, .1)

.clear
	clear both
	
label
	cursor pointer